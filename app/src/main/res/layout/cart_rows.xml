<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:paddingBottom="2dp"
    app:cardUseCompatPadding="true"
    app:cardCornerRadius="2dp">
    <LinearLayout
        android:background="#0CF39311"

        android:layout_width="match_parent"

        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:orientation="horizontal"
            android:layout_marginLeft="10dp">
            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:id="@+id/cartImage"
                android:layout_marginStart="5dp"
                android:layout_marginTop="3dp"
                android:layout_marginLeft="5dp" />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="3dp">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/pnameCart"
                android:text="product name "
                android:layout_marginTop="3dp"
                android:textSize="20dp"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="2dp"
                android:orientation="horizontal"
                android:paddingTop="25dp">

                <ImageButton
                    android:id="@+id/minusQuantityCart"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:background="@drawable/minus" />


                <TextView
                    android:id="@+id/quantityCart"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="5dp"

                    android:padding="2dp"
                    android:textColor="#000000"
                    android:textSize="15dp"
                    android:textStyle="bold" />

                <ImageButton
                    android:id="@+id/addQuantityCart"
                    android:layout_width="20dp"
                    android:layout_height="20dp"

                    android:background="@drawable/plus"
                    android:cropToPadding="false" />
            </LinearLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/priceCart"
                    android:textSize="20dp"
                    android:text="0 NIS"
                    android:layout_gravity="center"/>


            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingLeft="40dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="10dp">
                <ImageButton
                    android:layout_marginLeft="5dp"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:id="@+id/deleteCart"
                    android:text="Delete"
                    android:background="@drawable/garbage"
                    android:textSize="20dp"
                    />
                <Button
                    android:layout_marginTop="5dp"
                    android:layout_width="80dp"
                    android:layout_height="40dp"
                    android:id="@+id/buyCart"
                    android:text="Buy"
                    android:background="#F3E99B21"
                    android:textSize="20dp"
                   />

            </LinearLayout>





        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>