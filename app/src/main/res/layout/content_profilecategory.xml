<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00000000"
    android:layout_weight="8"
    android:orientation="vertical"
    tools:context=".profilecategory"
    >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginStart="40dp"

        android:orientation="vertical"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="30dp">


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_weight="1"

            android:layout_height="wrap_content"
            android:layout_marginTop="60dp">

            <ImageView
                android:layout_width="60dp"
                android:layout_height="50dp"
                android:background="@drawable/updatepro" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Profile Update"
                android:textColor="#E79B27"
                android:textSize="20dp"
                android:id="@+id/profileid"
                android:fontFamily="sans-serif-medium"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"

            android:orientation="horizontal"
            android:layout_marginTop="20dp">


            <ImageView
                android:layout_width="60dp"
                android:layout_height="50dp"
                android:background="@drawable/paymentinfo" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Payment Information"
                android:textColor="#E79B27"
                android:textSize="20dp"
                android:id="@+id/paymentid"
                android:fontFamily="sans-serif-medium"></TextView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="1"

            android:layout_marginTop="20dp">

            <ImageView
                android:layout_width="60dp"
                android:layout_height="50dp"
                android:background="@drawable/paymenthistory" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Payment History"
                android:textColor="#E79B27"
                android:textSize="20dp"
                android:id="@+id/historyid"
                android:fontFamily="sans-serif-medium" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="1"

            android:layout_marginTop="20dp">

            <ImageView
                android:layout_width="60dp"
                android:layout_height="50dp"
                android:background="@drawable/carticon" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="  Cart "
                android:textColor="#E79B27"
                android:textSize="20dp"
                android:id="@+id/cartprofilecat"
                android:fontFamily="sans-serif-medium" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"

            android:orientation="horizontal"
            android:layout_marginTop="20dp">


            <ImageView
                android:layout_width="60dp"
                android:layout_height="50dp"
                 />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Sign Out"
                android:textColor="#E79B27"
                android:textSize="20dp"
                android:id="@+id/signout"
                android:fontFamily="sans-serif-medium"></TextView>

        </LinearLayout>
    </LinearLayout>
    <android.support.design.widget.BottomNavigationView
        android:id="@+id/navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_gravity="bottom"
        android:layout_weight="1"

        android:background="?android:attr/windowBackground"
        app:menu="@menu/navigation" />


</RelativeLayout>
