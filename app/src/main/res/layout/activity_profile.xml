<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_vertical"
    android:layout_weight="13"
    android:background="#00000000"
    android:orientation="vertical"
    tools:context=".profile">


<ScrollView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <LinearLayout

        android:layout_width="wrap_content"
        android:layout_height="500dp"
        android:layout_alignParentTop="true"
        android:layout_marginHorizontal="5dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="80dp"
        android:layout_weight="3"
        android:orientation="vertical">


        <ImageView
            android:layout_width="170dp"
            android:layout_height="140dp"
            android:layout_gravity="center"
            android:layout_marginBottom="5dp"
            android:background="@mipmap/hey_launcher_round" />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:padding="10dp">

            <TextView
                android:id="@+id/usernameView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" UserName  "
                android:textColor="#000"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/usernameP"
                android:layout_width="230dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Enter your name "
                android:inputType="text"
                android:textColor="#E79B27"
                android:textSize="18dp" />


        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal"

            android:padding="10dp">

            <ImageView
                android:layout_width="70dp"
                android:layout_height="match_parent"
                android:background="@drawable/genderr" />

            <EditText
                android:id="@+id/genderP"
                android:layout_width="230dp"

                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Choose your Gender "
                android:inputType="text"
                android:orientation="horizontal" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal"

            android:padding="10dp">

            <ImageView
                android:layout_width="70dp"
                android:layout_height="match_parent"
                android:background="@drawable/bday" />

            <EditText
                android:id="@+id/bdayP"
                android:layout_width="227dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint=" dd/mm/yy"
                android:inputType="text"
                android:orientation="horizontal" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal"

            android:padding="10dp">

            <ImageView
                android:layout_width="70dp"
                android:layout_height="match_parent"
                android:background="@drawable/phonee" />

            <EditText
                android:id="@+id/mobileP"
                android:layout_width="230dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint=" Mobile Number"
                android:inputType="text"
                android:orientation="horizontal" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal"

            android:padding="10dp">

            <ImageView
                android:layout_width="70dp"
                android:layout_height="match_parent"
                android:background="@drawable/mail" />

            <EditText
                android:id="@+id/personalemailP"
                android:layout_width="230dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="contant_name@sample.com"
                android:inputType="text"
                android:orientation="horizontal" />


        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:orientation="vertical"


            android:padding="5dp">

            <Button
                android:id="@+id/saveP"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:background="@drawable/button"
                android:onClick="upDate"
                android:text="Save" />


        </LinearLayout>
    </LinearLayout>
</ScrollView>
    <android.support.design.widget.BottomNavigationView
        android:id="@+id/navigation"
        android:layout_weight="1"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="?android:attr/windowBackground"
        app:menu="@menu/navigation"
        android:layout_alignParentBottom="true"/>

</RelativeLayout>