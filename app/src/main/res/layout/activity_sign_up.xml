<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="320dp"
    android:layout_height="670dp"
    android:layout_gravity="center"
    android:gravity="center"
    android:layout_weight="8"
    android:background="#00000000"
    android:orientation="vertical"
    tools:context=".signupPage">

    <ImageView
        android:id="@+id/addImage"
        android:layout_width="186dp"
        android:layout_height="158dp"
        android:layout_gravity="center"
        android:background="@drawable/heey"
        android:scaleType="fitXY" />


    <EditText
        android:id="@+id/addedmail"
        android:layout_width="match_parent"
        android:layout_height="34dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/shape"
        android:clickable="true"
        android:cursorVisible="true"
        android:focusable="true"
        android:hint="Email@Example.com"
        android:inputType="text"
        android:singleLine="true" />

    <EditText
        android:id="@+id/addedFirstName"
        android:layout_width="match_parent"
        android:layout_height="34dp"

        android:layout_marginTop="10dp"
        android:background="@drawable/shape"
        android:clickable="true"
        android:cursorVisible="true"
        android:focusable="true"
        android:hint="FirstName"
        android:inputType="text"
        android:singleLine="true"

        />


    <EditText
        android:id="@+id/addedLastName"
        android:layout_width="match_parent"
        android:layout_height="34dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/shape"
        android:clickable="true"

        android:cursorVisible="true"
        android:focusable="true"
        android:hint="LastName"
        android:inputType="text"
        android:singleLine="true" />


    <EditText
        android:id="@+id/addedphone"
        android:layout_width="match_parent"
        android:layout_height="34dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/shape"
        android:clickable="true"
        android:cursorVisible="true"


        android:focusable="true"
        android:hint="Mobile Number"
        android:inputType="number"
        android:singleLine="true"

        />


    <EditText
        android:id="@+id/addedHomeNumber"
        android:layout_width="match_parent"
        android:layout_height="34dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/shape"


        android:clickable="true"
        android:cursorVisible="true"
        android:focusable="true"
        android:hint="Home Number"
        android:inputType="number"
        android:singleLine="true"

        />

    <EditText
        android:id="@+id/addedLocation"
        android:layout_width="match_parent"
        android:layout_height="34dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/shape"
        android:clickable="true"
        android:cursorVisible="true"
        android:focusable="true"
        android:hint="Location"
        android:inputType="number"
        android:singleLine="true"

        />


    <Button
        android:id="@+id/signup"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="35dp"
        android:background="@drawable/button"
        android:text="Create"
        android:textColor="#000000" />


</LinearLayout>
